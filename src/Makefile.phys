OPTIMIZE = -O2

CC = g++-4.7

CFLAGS = $(OPTIMIZE) -std=c++11 -g -Wall -I. -I../src \
         $(shell pkg-config bullet --cflags) \
         $(shell pkg-config libzmq --cflags) \
         -DPHYS_DEMO -pedantic -Wextra \
	 -Winit-self -Wc++11-compat

CLIBS = -L. -lOpenGLSupport \
        $(shell pkg-config bullet --libs) \
        $(shell pkg-config libzmq --libs) \
        -lm -lGL -lGLU -lglut 

SRCS =  phys_main.cpp \
	stlmesh.cpp \
	simulator.cpp \
	entityhandler.cpp \
	entity.cpp \
	pose.cpp \
	sensor.cpp \
	shapehandler.cpp \
	rocket.cpp \
	ground.cpp \
        gyrosensor.cpp \
        zmqhandler.cpp \
	CcdPhysicsDemo.cpp
OBJS = $(SRCS:.cpp=.o)

MAKEDEPEND = gcc -M $(CFLAGS) -o $*.d $<

EXE = phys_demo

all: $(EXE) client

run: $(EXE)
	./$(EXE)

%.P: %.cpp
	$(MAKEDEPEND)
	@sed 's/\($*\)\.o[ :]*/\1.o $@ : /g' < $*.d > $@; \
             rm -f $*.d; [ -s $@ ] || rm -f $@

include $(SRCS:.cpp=.P)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $<

$(EXE): $(OBJS)
	$(CC) $(CFLAGS) $^ -o $@ $(CLIBS)

client: client.o
	$(CC) $(CFLAGS) $< -o $@ $(CLIBS)

clean:
	rm -f *.o
#	rm -f *.P
	rm -f $(EXE) client
# DO NOT DELETE
