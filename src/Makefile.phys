OPTIMIZE = -O2
CC = g++-4.7
CFLAGS = $(OPTIMIZE) -std=c++11 -g -Wall -I. -I../src \
         $(shell pkg-config bullet --cflags) -DPHYS_DEMO -pedantic -Wextra \
	 -Winit-self -Wc++11-compat

CLIBS = -L. -lOpenGLSupport $(shell pkg-config bullet --libs) \
        -lm -lGL -lGLU -lglut 
SRCS =  phys_main.cpp \
	stlmesh.cpp \
	simulator.cpp \
	entityhandler.cpp \
	entity.cpp \
	pose.cpp \
	sensor.cpp \
	shapehandler.cpp \
	rocket.cpp \
	ground.cpp \
	CcdPhysicsDemo.cpp
OBJS =  phys_main.o \
	stlmesh.o \
	simulator.o \
	entityhandler.o \
	entity.o \
	pose.o \
	sensor.o \
	shapehandler.o \
	rocket.o \
	ground.o \
	CcdPhysicsDemo.o

MAKEDEPEND = gcc -M $(CFLAGS) -o $*.d $<

EXE = phys_demo

all: $(EXE)
	$(CC) --version
	global -u # run incremental update

run: $(EXE)
	./$(EXE)

%.P: %.cpp
	$(MAKEDEPEND)
	@sed 's/\($*\)\.o[ :]*/\1.o $@ : /g' < $*.d > $@; \
             rm -f $*.d; [ -s $@ ] || rm -f $@

include $(SRCS:.cpp=.P)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $<

$(EXE): $(OBJS)
	$(CC) $(CFLAGS) $^ -o $@ $(CLIBS)

clean:
	rm -f *.o
#	rm -f *.P
	rm -f $(EXE)
# DO NOT DELETE
